<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">eriocnemis_directory_region_listing.eriocnemis_directory_region_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add" class="Eriocnemis\Directory\Ui\Component\Control\Region\AddButton"/>
        </buttons>
        <spinner>eriocnemis_directory_region_columns</spinner>
        <deps>
            <dep>eriocnemis_directory_region_listing.eriocnemis_directory_region_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="eriocnemis_directory_region_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">region_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Eriocnemis_Directory::region</aclResource>
        <dataProvider class="Eriocnemis\Directory\Ui\DataProvider\Region\ListingDataProvider" name="eriocnemis_directory_region_listing_data_source">
            <settings>
                <requestFieldName>region_id</requestFieldName>
                <primaryFieldName>region_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="name"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions" class="Eriocnemis\Directory\Ui\Component\MassAction">
            <action name="delete">
                <settings>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                    <url path="*/*/massDelete"/>
                    <confirm>
                        <message translate="true">Delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                </settings>
            </action>
            <action name="status">
                <settings>
                    <type>status</type>
                    <label translate="true">Change status</label>
                    <actions>
                        <action name="0">
                            <type>enable</type>
                            <label translate="true">Enable</label>
                            <url path="*/*/massStatus">
                                <param name="status">1</param>
                            </url>
                        </action>
                        <action name="1">
                            <type>disable</type>
                            <label translate="true">Disable</label>
                            <url path="*/*/massStatus">
                                <param name="status">0</param>
                            </url>
                        </action>
                    </actions>
                </settings>
            </action>
        </massaction>
        <exportButton name="export_button"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="eriocnemis_directory_region_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">eriocnemis_directory_region_listing.eriocnemis_directory_region_listing.eriocnemis_directory_region_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>region_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="region_id" sortOrder="20">
            <settings>
                <label translate="true">Region ID</label>
            </settings>
        </column>
        <column name="country_id" component="Magento_Ui/js/grid/columns/select" sortOrder="30">
            <settings>
                <label translate="true">Country</label>
                <filter>select</filter>
                <dataType>select</dataType>
                <options class="Magento\Config\Model\Config\Source\Locale\Country"/>
            </settings>
        </column>
        <column name="code" sortOrder="40">
            <settings>
                <label translate="true">Region Code</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="default_name" sortOrder="50">
            <settings>
                <label translate="true">Default Name</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select" sortOrder="200">
            <settings>
                <label translate="true">Status</label>
                <filter>select</filter>
                <dataType>select</dataType>
                <options class="Magento\Config\Model\Config\Source\Enabledisable"/>
            </settings>
        </column>
        <actionsColumn name="actions" class="Magento\Backend\Ui\Component\Listing\Column\EditAction" sortOrder="210">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="editUrlPath" xsi:type="string">eriocnemis_directory/region/edit</item>
                </item>
            </argument>
            <settings>
                <indexField>region_id</indexField>
                <visible>false</visible>
            </settings>
        </actionsColumn>
    </columns>
</listing>
