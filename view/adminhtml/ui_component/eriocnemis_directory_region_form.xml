<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">eriocnemis_directory_region_form.eriocnemis_directory_region_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>eriocnemis_directory_region_form</namespace>
        <deps>
            <dep>eriocnemis_directory_region_form.eriocnemis_directory_region_form_data_source</dep>
        </deps>
        <buttons>
            <button name="back">
                <url path="*/*/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="delete" class="Eriocnemis\Directory\Ui\Component\Control\Region\DeleteButton"/>
            <button name="save" class="Eriocnemis\Directory\Ui\Component\Control\Region\SaveSplitButton"/>
        </buttons>
    </settings>
    <dataSource name="eriocnemis_directory_region_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="*/*/save"/>
            <!--<validateUrl path="*/*/validate"/>-->
        </settings>
        <dataProvider class="Eriocnemis\Directory\Ui\DataProvider\Region\FormDataProvider" name="eriocnemis_directory_region_form_data_source">
            <settings>
                <requestFieldName>region_id</requestFieldName>
                <primaryFieldName>region_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General Information</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <dataScope>data.region</dataScope>
        </settings>
        <field name="status" formElement="checkbox" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="code" formElement="input" sortOrder="20">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Region Code</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="default_name" formElement="input" sortOrder="30">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Default Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="country_id" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Country</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Locale\Country"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="labels" sortOrder="20">
        <settings>
            <label translate="true">Labels</label>
            <collapsible>true</collapsible>
            <opened>false</opened>
            <dataScope>data.region</dataScope>
        </settings>
        <dynamicRows name="labels">
            <settings>
                <addButtonLabel translate="true">Add Record</addButtonLabel>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <componentType>dynamicRows</componentType>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
                <pageSize>10</pageSize>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="locale" formElement="select" sortOrder="10">
                    <settings>
                        <dataType>text</dataType>
                        <label>Language</label>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Magento\Config\Model\Config\Source\Locale"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="name" formElement="input" sortOrder="20">
                    <settings>
                        <dataType>text</dataType>
                        <label>Region Name</label>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                </field>
                <actionDelete name="actionDelete" sortOrder="30">
                    <settings>
                        <label translate="true">Delete</label>
                    </settings>
                </actionDelete>
            </container>
        </dynamicRows>
    </fieldset>
</form>
